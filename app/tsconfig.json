{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "include": [
      "**/*.ts",
      "**/*.tsx"
  ],
  "compilerOptions": {
    "jsx": "react",
    "types": ["node"],
    "lib": ["ES2017"],
    "baseUrl": ".",                                      
    "paths": {
      "@/*": ["./*"],
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}